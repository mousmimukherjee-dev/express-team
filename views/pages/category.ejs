<%- include("../partials/head") %>
<body> 
  <%- include("../partials/header") %>

  <main>
    <div class="sidebar">

      <%- include("../partials/sideBar") %>
    </div>

    <div class="content">
      <h1>
        Category type - <%= category || 'Category is unknown' %>
      </h1>

      <% if (items && items.length > 0) { %>

        <% for (let i = 0; i < items.length; i++) { %>
          <div class="item_wrapper">

            <h2 class="item_name">
              <%= items[i].title || 'No title available' %>
            </h2>

            <p class="item_description">
              <%= items[i].subtitle || 'Image sub title' %>
            </p>

            <% if (items[i].image) { %>
              <img src="<%= items[i].image %>" 
                   alt="<%= items[i].title || 'Image title' %>" 
                   width="300px" />
            <% } %>

            <p class="item_description">
              <%= items[i].description || '' %>
            </p>

            <p class="item_description">
              <%= items[i].price || '' %>
            </p>
          </div>
        <% } %>
      <% } else { %>
        <p>No items found for this category.</p>
      <% } %>
    </div>
  </main>

  <%- include("../partials/footer") %>
</body>
</html>
